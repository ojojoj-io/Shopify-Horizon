{% doc %}
  @prompt
    Create a reusable Shopify Block "Product Scale" in a single .liquid file. The section should display product attributes (like size, weight, durability, etc.) with visual rating bars. Make it fully configurable from the Shopify , use theme. Theme Editor with options to customize attribute names, scale values. Include schema settings for easy customization, use styles from section  theme editor., Add theme editore schema choice

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-scale-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-product-scale-heading-{{ ai_gen_id }} {
    margin:0 0 {{ block.settings.heading_margin }}px 0;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-scale-description-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.description_margin }}px 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-product-scale-attributes-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.attribute_spacing }}px;
  }

  .ai-product-scale-attribute-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-product-scale-attribute-header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .ai-product-scale-attribute-name-{{ ai_gen_id }} {
    color: {{ block.settings.attribute_name_color }};
    font-size: {{ block.settings.attribute_name_size }}px;
    font-weight: {{ block.settings.attribute_name_weight }};
    margin: 0;
  }

  .ai-product-scale-attribute-value-{{ ai_gen_id }} {
    color: {{ block.settings.attribute_value_color }};
    font-size: {{ block.settings.attribute_value_size }}px;
    margin: 0;
  }

  .ai-product-scale-bar-container-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.bar_height }}px;
    background-color: {{ block.settings.bar_background_color }};
    border-radius: {{ block.settings.bar_border_radius }}px;
    overflow: hidden;
    position: relative;
  }

  .ai-product-scale-bar-fill-{{ ai_gen_id }} {
    height: 100%;
    border-radius: {{ block.settings.bar_border_radius }}px;
    transition: width 0.8s ease-out;
    position: relative;
  }

  {% if block.settings.bar_style == 'solid' %}
    .ai-product-scale-bar-fill-{{ ai_gen_id }} {
      background-color: {{ block.settings.bar_fill_color }};
    }
  {% elsif block.settings.bar_style == 'gradient' %}
    .ai-product-scale-bar-fill-{{ ai_gen_id }} {
      background: linear-gradient(90deg, {{ block.settings.bar_gradient_start }}, {{ block.settings.bar_gradient_end }});
    }
  {% elsif block.settings.bar_style == 'striped' %}
    .ai-product-scale-bar-fill-{{ ai_gen_id }} {
      background-color: {{ block.settings.bar_fill_color }};
      background-image: repeating-linear-gradient(
        45deg,
        transparent,
        transparent 4px,
        rgba(255, 255, 255, 0.2) 4px,
        rgba(255, 255, 255, 0.2) 8px
      );
    }
  {% endif %}

  {% if block.settings.bar_animation == 'shine' %}
    .ai-product-scale-bar-fill-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 4px;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3));
    }
  {% elsif block.settings.bar_animation == 'pulse' %}
    .ai-product-scale-bar-fill-{{ ai_gen_id }} {
      animation: ai-pulse-{{ ai_gen_id }} 2s ease-in-out infinite;
    }
    
    @keyframes ai-pulse-{{ ai_gen_id }} {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.7; }
    }
  {% endif %}

  .ai-product-scale-scale-labels-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    margin-top: 4px;
    font-size: {{ block.settings.scale_label_size }}px;
    color: {{ block.settings.scale_label_color }};
  }

  {% if block.settings.show_scale_labels %}
    .ai-product-scale-scale-labels-{{ ai_gen_id }} {
      display: flex;}
  {% else %}
    .ai-product-scale-scale-labels-{{ ai_gen_id }} {
      display: none;
    }
  {% endif %}

  {% if block.settings.layout_style == 'compact' %}
    .ai-product-scale-attribute-header-{{ ai_gen_id }} {
      flex-direction: row;
      align-items: center;
    }
    .ai-product-scale-attribute-{{ ai_gen_id }} {
      gap: 4px;
    }
  {% elsif block.settings.layout_style == 'spacious' %}
    .ai-product-scale-attribute-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 8px;
    }
    .ai-product-scale-attribute-{{ ai_gen_id }} {
      gap: 12px;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-product-scale-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.75 }}px;
    }

    .ai-product-scale-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.9 }}px;
    }

    {% if block.settings.mobile_layout == 'stacked' %}
      .ai-product-scale-attribute-header-{{ ai_gen_id }} {
        flex-direction: column;
        align-items: flex-start;
        gap: 4px;
      }
    {% endif %}
  }
{% endstyle %}<div class="ai-product-scale-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h3 class="ai-product-scale-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h3>
  {% endif %}

  {% if block.settings.description != blank %}
    <div class="ai-product-scale-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
  {% endif %}

  <div class="ai-product-scale-attributes-{{ ai_gen_id }}">
    {% for i in (1..5) %}
      {% liquid
        assign attribute_name_key = 'attribute_' | append: i | append: '_name'
        assign attribute_value_key = 'attribute_' | append: i | append: '_value'
        assign attribute_max_key = 'attribute_' | append: i | append: '_max'
        assign attribute_enabled_key = 'attribute_' | append: i | append: '_enabled'

        assign attribute_name = block.settings[attribute_name_key]
        assign attribute_value = block.settings[attribute_value_key]
        assign attribute_max = block.settings[attribute_max_key]
        assign attribute_enabled = block.settings[attribute_enabled_key]

        assign percentage = attribute_value | times: 100.0 | divided_by: attribute_max%}

      {% if attribute_enabled and attribute_name != blank %}
        <div class="ai-product-scale-attribute-{{ ai_gen_id }}">
          <div class="ai-product-scale-attribute-header-{{ ai_gen_id }}">
            <h4 class="ai-product-scale-attribute-name-{{ ai_gen_id }}">{{ attribute_name }}</h4>
            {% if block.settings.show_values %}
              <span class="ai-product-scale-attribute-value-{{ ai_gen_id }}">
                {% if block.settings.value_format == 'fraction' %}
                  {{ attribute_value }}/{{ attribute_max }}
                {% elsif block.settings.value_format == 'percentage' %}
                  {{ percentage | round }}%
                {% elsif block.settings.value_format == 'stars' %}
                  {% for star in (1..attribute_max) %}
                    {% if star <= attribute_value %}★{% else %}☆{% endif %}
                  {% endfor %}
                {% endif %}
              </span>
            {% endif %}
          </div>
          
          <div class="ai-product-scale-bar-container-{{ ai_gen_id }}">
            <div 
              class="ai-product-scale-bar-fill-{{ ai_gen_id }}"
              style="width: {{ percentage }}%;"
            ></div>
          </div>

          {% if block.settings.show_scale_labels %}
            <div class="ai-product-scale-scale-labels-{{ ai_gen_id }}">
              <span>{{ block.settings.scale_min_label }}</span>
              <span>{{ block.settings.scale_max_label }}</span></div>
          {% endif %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

