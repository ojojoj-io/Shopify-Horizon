{% doc %}
  @prompt
    image gallery, images from dynamic content

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-image-gallery-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-image-gallery__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    max-width: 100%;
  }

  .ai-image-gallery__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.placeholder_bg_color }};
  }

  .ai-image-gallery__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.aspect_ratio }};
    overflow: hidden;
  }

  .ai-image-gallery__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-image-gallery__image-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.hover_scale }});
  }

  .ai-image-gallery__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.placeholder_bg_color }};
    color: {{ block.settings.placeholder_text_color }};}

  .ai-image-gallery__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-image-gallery__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity }}) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: flex-end;
    padding: 20px;
  }

  .ai-image-gallery__item-{{ ai_gen_id }}:hover .ai-image-gallery__overlay-{{ ai_gen_id }} {
    opacity: 1;
  }

  .ai-image-gallery__caption-{{ ai_gen_id }} {
    color: white;
    font-size: {{ block.settings.caption_size }}px;
    font-weight: 500;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.5);
  }

  .ai-image-gallery__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: {{ block.settings.placeholder_text_color }};
    font-size: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-image-gallery__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-image-gallery__overlay-{{ ai_gen_id }} {
      padding: 15px;
    }

    .ai-image-gallery__caption-{{ ai_gen_id }} {
      font-size: {{ block.settings.caption_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-image-gallery__grid-{{ ai_gen_id }} {
      gap: {{ block.settings.grid_gap | times: 0.5 }}px;
    }
  }
{% endstyle %}

<div class="ai-image-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% assign has_images = false %}
  {% for i in (1..12) %}
    {% assign image_key = 'image_' | append: i %}
    {% if block.settings[image_key] != blank %}
      {% assign has_images = true %}
      {% break %}
    {% endif %}
  {% endfor %}

  {% if has_images %}
    <div class="ai-image-gallery__grid-{{ ai_gen_id }}">
      {% for i in (1..12) %}
        {% assign image_key = 'image_' | append: i %}
        {% assign caption_key = 'caption_' | append: i %}
        {% assign image = block.settings[image_key] %}
        {% assign caption = block.settings[caption_key] %}

        {% if image != blank %}
          <div class="ai-image-gallery__item-{{ ai_gen_id }}">
            <div class="ai-image-gallery__image-wrapper-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 800 }}"
                alt="{{ image.alt | escape }}"
                class="ai-image-gallery__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >{% if caption != blank and block.settings.show_captions %}
                <div class="ai-image-gallery__overlay-{{ ai_gen_id }}">
                  <div class="ai-image-gallery__caption-{{ ai_gen_id }}">
                    {{ caption }}
                  </div>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <div class="ai-image-gallery__empty-state-{{ ai_gen_id }}">
      <div class="ai-image-gallery__placeholder-{{ ai_gen_id }}">
        {{'image' | placeholder_svg_tag }}
      </div>
      <p>Add images to create your gallery</p>
    </div>
  {% endif %}
</div>

